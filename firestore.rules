rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Rules
    match /users/{userId} {
      // Allow user to access their own user document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Explicitly allow user to access their logs subcollection
      match /logs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}